<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.kpmadan.health_ots.SignInActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ots_img_home" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signupButton"
        android:layout_alignRight="@+id/signupButton"
        android:layout_below="@+id/imageView2"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="41dp"
        app:srcCompat="@drawable/ots3" />



    <Button
        android:id="@+id/signinButton"
        android:layout_width="165dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/email_button"
        android:hint="Sign In "
        android:onClick="sendRegisterEmail"
        android:text="Sign In"
        android:textColor="#E8EAF6"
        android:textColorHint="#E8EAF6"
        android:textSize="19sp" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/signinButton"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/signinButton"
        android:layout_toRightOf="@+id/signinButton"
        android:background="@drawable/email_button"
        android:onClick="onClickSingUp"
        android:text="Sign Up" />


</RelativeLayout>
